@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="video-container">
    <video autoplay loop muted playsinline class="video">
        <source src="~/Content/images/backgroundvideo.mp4" type="video/mp4" />
    </video>
</div>
<section class="main-content">
    <div class="quick-links">
        <div class="text">
            <h1>Welcome To</h1>
            <h2>Society Management System</h2>
            <p>Experience Modern Living with Community Excellence.</p>
            <div class="buttons">
                <a href="/Account/Memberlogin" class="b1" aria-label="Member Login">Member Login <i class="fas fa-arrow-right"></i></a>
                <a href="/Account/Adminlogin" class="b2" aria-label="Admin Login">Admin Login <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>
</section>


<section class="society-gallery">
    <h2>Our Society Highlights</h2>
    <div class="gallery">
        <div class="gallery-item">
            <img src="~/Content/images/image1.png" alt="Society Event 1">
        </div>
        <div class="gallery-item">
            <img src="~/Content/images/image2.png" alt="Society Event 2">
        </div>
        <div class="gallery-item">
            <img src="~/Content/images/image3.png" alt="Society Event 3">
        </div>
    </div>
</section>
<div class="image-container">
    <div class="overlay"></div>
    <section class="events-section">
        <h2>Featured Society Events</h2>
        <ul>
            <li>Summer Picnic – 20th February</li>
            <li>Charity Run – 25th March</li>
            <li>Cultural Festival – 5th April</li>
        </ul>
    </section>

    <section class="testimonials">
        <h2>Member Testimonials</h2>
        <blockquote>
            "The Society has been a fantastic platform for networking!" – Hassan.
        </blockquote>
        <blockquote>
            "I love the events they organize. Truly a great community." – Arslan.
        </blockquote>
        <blockquote>
            "I feel so supported being part of this amazing society!" – Ayan.
        </blockquote>
    </section>
</div>
